

<div class="banner" style="background-image:('asset-url(landing)')";>


  <div class="text-right pr-2">
    <% if user_signed_in? %>
      <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "text-light" %>
    <% else %>
      <%= link_to "Login", new_user_session_path, class: "text-light"%>
    <% end %>
  </div>

  <div class="d-flex flex-column justify-content-around align-items-center landing-info">

    <div>
      <h1 class="app-title"><span>BE<b>the</b>DJ</span></h1>
      <h1 class="app-title rotate"><span>BE<b>the</b>DJ</span></h1>
    </div>

    <div class="text-center">
      <%= form_tag venues_path, class: "search-tab", method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          id: "venue_location",
          class: "search-field",
          placeholder: "Search your area"%>

        <%= button_tag :submit, class: "create-button locate-button" do %>
          <p>Locate</p>
        <% end %>
      <% end %>
    </div>

    <div class="app-description text-center">
      <h3> You Request </h3>
      <h3> We Play </h3>
      <p>Request your songs to the DJ</p>
    </div>
  </div>
  <%= link_to 'Sign in with Spotify', '/auth/spotify' %>
</div>


