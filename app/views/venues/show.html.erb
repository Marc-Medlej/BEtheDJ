<div class="container bg-white">
  <div class="row space-man">
    <div class="col-6">
       <h1><%= @venue.name %></h1>
    </div>
    <div class="col-6">
    <div class="btn add-new link-whiten mt-4">
    <%= link_to "+", new_venue_event_path(@venue) %>
  </div>
  </div>
  </div>


    <div class="row">
      <% @events.each do |event| %>
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
          <div class="card-product flex-container space-between m-3 p-3">
            <%= link_to "", event_path(event), class: "card-link"%>
          <!--  # image_tag event.photo  -->
              <!--   # link_to "", event_path(event), class: "card-link"
                # if event.photo.attached?
                  # cl_image_tag event.photo.key, height: 300, width: 400, crop: :fill
                 end  -->
              <div class="card-product-infos mt-3">
                <h4><%= event.name %></h4>
                <p><i class="fas fa-user-alt"></i> <%= Event.find(event.id).user.dj_name %></p>
              </div>
              <div class="card-date">
                <p><i class="fas fa-calendar-alt"></i> <%= event.date.strftime("%d/%m/%Y") %></p>
              </div>
          </div>
        </div>
      <% end %>

</div>
